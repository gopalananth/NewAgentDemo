# =============================================================================
# NEW AGENT DEMO PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=new_agent_demo
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT secret for token signing (generate a random 32+ character string)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# Session secret for cookie signing (generate a random 32+ character string)
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# =============================================================================
# AZURE AD CONFIGURATION
# =============================================================================
# Azure Active Directory app registration details
# Get these from Azure Portal > Azure Active Directory > App registrations
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_REDIRECT_URI=http://localhost:3001/api/auth/azure/callback

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the backend server
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Add any external service configurations here
# AI_SERVICE_API_KEY=your_ai_service_key_here
# MONITORING_API_KEY=your_monitoring_key_here

# =============================================================================
# LOGGING & MONITORING (Optional)
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable detailed SQL logging in development
DB_LOGGING=true

# =============================================================================
# SECURITY SETTINGS (Optional)
# =============================================================================
# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Only needed in production environment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# REDIS_URL=redis://localhost:6379